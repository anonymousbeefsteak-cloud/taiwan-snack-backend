# 在專案文件夾中運行
cat > vercel.json << 'EOF'
{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/orders",
      "dest": "/api/orders.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/menu", 
      "dest": "/api/menu.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/history",
      "dest": "/api/history.js", 
      "methods": ["POST", "OPTIONS"]
    }
  ]
}
EOF
